<Window x:Class="SplashLogin.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SplashLogin"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        
        Title="Karl Ejner Booking"
        Height="400"
        Width="600">
    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="/la.jpg" />
        </Canvas.Background>

        <TextBox Height="30"
                 Width="100"
                 Name="textBoxUsername"
                 Background="WhiteSmoke"
                 Canvas.Left="200"
                 Canvas.Top="200"
                 TextChanged="TextBoxUsername_TextChanged" />

        <PasswordBox Height="30"
                     Width="100"
                     Name="passwordBox"
                     Background="WhiteSmoke"
                     Canvas.Left="200"
                     Canvas.Top="240" />
        <Button Content="Log ind"
                Canvas.Left="240"
                Canvas.Top="290"
                Click="Button_Click"
                Height="30"
                Width="60" />
    </Canvas>
</Window>
